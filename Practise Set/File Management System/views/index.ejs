<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10">
        <form action="/create" onsubmit="" method="POST" >
          <input
            class="block px-5 py-3 w-full rounded-lg text-gey outline-none bg-red-400"
            type="text "
            placeholder="Title goes here" name="title"
          />
          <textarea
            class="block px-5 py-3 w-full rounded-lg text-white bg-red-900 outline-none mt-2 resize-none"
            placeholder="Write your tast detail here..." name="content"
          ></textarea>
          <input
            class="mt-2 bg-blue-500 rounded p-3"
            type="submit"
            value="Add Task"
          />
        </form>
      </div>
      <div class="tasks flex gap-3 flex-wrap p-10">
        <% if(files.length > 0){%>
           <% files.forEach(function(val){%>
             <div class="task w-72 px-3 py-3 rounded-md bg-zinc-800">
          <h1 class="text-white py-3 px-3 text-3xl tracking-tighter">
            <%= val %>
          </h1>
          <a class="text-blue-500 px-3 inline-block mt-3" href="/file/<%=val%>">Read More...</a>
          <a href="/edit/<%=val%>" class="text-yellow-600">Edit</a>
          <a class="text-red-500 ml-3" href="/remove/<%=val%>">Remove</a>
        </div>
             <% }) %> 
             <% } else { %>
        <h3 class="text-white bg-black p-3 ">No Tasks Yet...</h3>

        <% } %>
